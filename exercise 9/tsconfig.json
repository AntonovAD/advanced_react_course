{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true
  },
  "exclude": [
    "./node_modules/**/*"
  ]
}